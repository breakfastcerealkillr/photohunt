<project name="dist-src" default="dist-src">
  <description>
  Provides the target for building a distribution of the source code for Photo Hunt.
  </description>

  <import file="build.xml"/>

  <target name="dist-src" depends="compile" description="Create a distribution package.">
    <!-- Define the directories and distribution name -->
    <property name="dist.dir" location="${build.dir}/dist" />
    <property name="tmp.dir" location="${basedir}/tmp" />
    <property name="dist.name" value="${system.name}-${version}-src" />

    <!-- Copy distribution files to the tmp dir. -->
    <mkdir dir="${tmp.dir}/${dist.name}" />
    <copy todir="${tmp.dir}/${dist.name}">
      <fileset dir="${basedir}" excludes="**/.svn/*, **/*~, tmp/**, build/**, bin/**" />
    </copy>

    <!-- Create the zip distribution of this system, and then delete the tmp dir. -->
    <mkdir dir="${dist.dir}" />
    <zip zipfile="${dist.dir}/${dist.name}.zip" basedir="${tmp.dir}" />
    <delete dir="${tmp.dir}" />
  </target>

</project>

