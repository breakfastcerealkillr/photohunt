<?xml version="1.0"?>
<!DOCTYPE faces-config PUBLIC
  "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.1//EN"
  "http://java.sun.com/dtd/web-facesconfig_1_1.dtd">

<faces-config>
  
  <navigation-rule>
    <from-view-id>/slideshow.jsp</from-view-id>
    <navigation-case>
      <from-outcome>end</from-outcome>
      <to-view-id>/end.jsp</to-view-id>
    </navigation-case>
  </navigation-rule>
  
  <navigation-rule>
    <from-view-id>/approval.jsp</from-view-id>
    <navigation-case>
      <from-action>#{approvalBean.sortPictures}</from-action>
      <from-outcome>confirm</from-outcome>
      <to-view-id>/approval-confirm.jsp</to-view-id>
    </navigation-case>
  </navigation-rule>
  
  <navigation-rule>
    <from-view-id>/approval-confirm.jsp</from-view-id>
    <navigation-case>
      <from-action>#{approvalBean.approvePictures}</from-action>
      <from-outcome>approved</from-outcome>
      <to-view-id>/approval.jsp</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>return</from-outcome>
      <to-view-id>/approval.jsp</to-view-id>
    </navigation-case>
  </navigation-rule>
  
  <managed-bean>
    <managed-bean-name>pictureBean</managed-bean-name>
    <managed-bean-class>
      edu.hawaii.photohunt.webapp.beans.PictureBean
    </managed-bean-class>
    <managed-bean-scope>session</managed-bean-scope>
  </managed-bean>
  
  <managed-bean>
    <managed-bean-name>approvalBean</managed-bean-name>
    <managed-bean-class>
      edu.hawaii.photohunt.webapp.beans.ApprovalBean
    </managed-bean-class>
    <managed-bean-scope>session</managed-bean-scope>
  </managed-bean>
  
  <managed-bean>
    <managed-bean-name>pictureBean</managed-bean-name>
    <managed-bean-class>
      edu.hawaii.photohunt.webapp.beans.PictureBean
    </managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>

</faces-config>