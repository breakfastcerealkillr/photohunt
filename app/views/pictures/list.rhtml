<h3>Listing pictures:</h3>
<div class="picture-list">
	<table border=3>
		<tr>
			<td><b><center>ID</center></b></td>
			<td><b><center>Tag</center></b></td>
			<td><b><center>Description</center></b></td>
			<td><b><center>Date Taken</center></b></td>
			<td><b><center>Photo</center></b></td>
		</tr>
	<% for picture in @all_pictures %>
		<tr>
			<td><%= h(picture.id)%></td>
    	<td><%= h(picture.tag)%></td>
			<td><%= h(picture.description)%></td>
			<td><%= h(picture.date)%></td>
			<td><%= link_to(image_tag(url_for(:action => 'picture', :id => picture.id), :size => "100x100"), 
                  url_for(:action => 'picture', :id => picture.id)
                 )%>
 			</td>
			<% end %>
		</tr>
	</table>
</div>